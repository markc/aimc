{
    "name": "markc/dictation",
    "description": "Local speech-to-text dictation for Laravel/Filament using whisper.cpp on Linux/Wayland",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Markc\\Dictation\\": "src/"
        }
    },
    "require": {
        "php": "^8.1",
        "codewithkyrian/whisper.php": "^1.0",
        "livewire/livewire": "^3.0|^4.0",
        "filament/filament": "^4.0|^5.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Markc\\Dictation\\DictationServiceProvider"
            ]
        }
    }
}
